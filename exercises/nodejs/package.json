{
  "name": "docker-testcontainers-lab-nodejs",
  "version": "1.0.0",
  "description": "Node.js examples for Docker Testcontainers lab",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "testcontainers",
    "docker",
    "testing",
    "integration-testing"
  ],
  "author": "Docker Lab Team",
  "license": "MIT",
  "devDependencies": {
    "@testcontainers/node": "^1.1.0",
    "@testcontainers/postgres": "^1.1.0",
    "@testcontainers/kafka": "^1.1.0",
    "@testcontainers/rabbitmq": "^1.1.0",
    "@testcontainers/redis": "^1.1.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/pg": "^8.10.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
